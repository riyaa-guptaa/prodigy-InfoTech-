      max-width: 800px;
      margin: auto;
      font-size: 1.1rem;
    }

    .skills {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 20px;
      text-align: center;
    }

    .skills div {
      background: #27293d;
      padding: 20px;
      border-radius: 10px;
      transition: transform 0.3s ease;
    }

    .skills div:hover {
      transform: scale(1.05);
      background: #00fff710;
    }

    .projects {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 25px;
    }

    .project {
      background: #27293d;
      border-radius: 10px;
      padding: 20px;
      transition: transform 0.3s ease;
    }

    .project:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 15px #00fff755;
    }

    .contact {
      text-align: center;
    }

    .contact p {
      margin-bottom: 10px;
    }

    .footer {
      background: #111;
      text-align: center;
      padding: 15px;
      font-size: 0.9rem;
      opacity: 0.7;
    }

    .dark-toggle {
      position: fixed;
      top: 15px;
      right: 15px;
      padding: 10px 15px;
      border: none;
      background: #00fff7;
      color: #000;
      border-radius: 25px;
      cursor: pointer;
      font-weight: bold;
    }

    .dark {
      background: #fff;
      color: #000;
    }
    .dark header,
    .dark nav,
    .dark section,
    .dark .project,
    .dark .skills div {
      background: #f0f0f0 !important;
      color: #000 !important;
    }
